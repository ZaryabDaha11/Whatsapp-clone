<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSetup"
    android:background="@color/white">

    <TextView
        android:id="@+id/SetProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:text="Profile Info"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:text="Please provide your name and an optional photo"
        android:textAlignment="gravity"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/UserNameBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:background="@color/white"
        android:hint="Type your name here"
        android:importantForAutofill="no"
        android:padding="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/teal_700"
        android:layout_below="@id/UserNameBox"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />


    <Button
        android:id="@+id/ProfileSetupButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/UserNameBox"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="#11DC46"
        android:text="Next"
        android:textColor="@color/white" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/ooooprofile" />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/addProfilePic"
        android:src="@drawable/plus"
        android:layout_alignEnd="@id/imageView"
        android:layout_alignBottom="@id/imageView"/>

</RelativeLayout>