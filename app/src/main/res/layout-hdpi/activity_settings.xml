<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/profileSetCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settingUserImg"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ooooprofile"
                android:layout_margin="30dp"
                />

                <TextView
                    android:id="@+id/settingUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="250dp"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:padding="2dp"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/settingUserBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey there! I am using Whatsapp"
                    android:textSize="35dp"
                    android:maxLines="1"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="280dp"
                    />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/grey"
            android:layout_below="@id/profileSetCard"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/accountsImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/key"
                android:padding="25dp"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Account"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="160dp"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/accounts2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy, security, change number"
                android:textSize="28dp"
                android:maxLines="1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="30dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chatsImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:padding="25dp"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/chats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chats"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="160dp"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/chats2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme, wallpapers, chat history"
                android:textSize="28dp"
                android:maxLines="1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="30dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/notificationImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/notification"
                android:padding="25dp"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Notifications"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="160dp"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/notification2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message, group and call tones"
                android:textSize="28dp"
                android:maxLines="1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="30dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/storageImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/chargingcircle"
                android:padding="25dp"
                android:tintMode="add"
                android:tint="@color/main_main"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/storageAndData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Storage and data"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="160dp"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/storageAndData2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network usage, auto-download"
                android:textSize="28dp"
                android:maxLines="1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="30dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpcard"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/helpImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/informationn"
                android:padding="25dp"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Help"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="160dp"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/help2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help center, contact us, privacy policy"
                android:textSize="28dp"
                android:maxLines="1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="30dp"
                />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/helpcard"
            android:background="@color/grey"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inviteCard"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/inviteImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:padding="25dp"
                android:src="@drawable/friends" />

            <TextView
                android:id="@+id/invite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="160dp"
                android:padding="2dp"
                android:text="Invite a friend"
                android:textColor="@color/black"
                android:textSize="36sp" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>